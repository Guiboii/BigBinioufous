<table class="table table-hover text-center">
            <h3>Les Comptables</h3>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>City</th>
                    <th>Instrument</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for accountant in accountants %}
                <tr>
                    <td>{% if accountant.gender == 'male' %}<i class="fas fa-male"></i>{% else %}<i class="fas fa-female"></i>{% endif %} {{ accountant.fullName }}</td>
                    <td>{% if accountant.picture == null %}
                        <i class="fas fa-portrait"></i> <em>no picture</em>
                    {% else %}
                        <img src="{{ asset('uploads/pictures/' ~ accountant.picture) }}" class="items-align-right avatar avatar-medium" alt=" Avatar de {{ accountant.firstname}}">
                    {% endif %}</td>
                    <td>{{ accountant.city }}</td>
                    <td>{{ accountant.instrument.title }}</td>
                    <td> <a href="{{ path ('user_show', {'slug' : accountant.slug})}}" class="btn btn-green"><i class="fas fa-user-edit"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>