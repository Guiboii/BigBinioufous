<table class="table table-hover">
            <h3>Les Comptables</h3>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Gender</th>
                    <th>City</th>
                    <th>Instrument</th>
                    <th>Wished role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for accountant in accountants %}
                <tr>
                    <td>{{ accountant.fullName }}</td>
                    <td><img src="{{ asset('uploads/pictures/' ~ accountant.picture) }}" class="items-align-right avatar avatar-medium" alt="Avatar de {{ accountant.fullName}}"> </td>
                    <td>{{ accountant.gender }}</td>
                    <td>{{ accountant.city }}</td>
                    <td>instrument</td>
                    <td>{{ accountant.wish }}</td>
                    <td> <a href="{{ path ('user_valid', {'slug' : accountant.slug, 'wish' : accountant.wish})}}" class="btn btn-primary"><i class="fas fa-check"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>