<table class="table table-hover">
            <h3>Les Membres</h3>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Gender</th>
                    <th>City</th>
                    <th>Instrument</th>
                    <th>Wished role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td>{{ member.fullName }}</td>
                    <td>{% if member.picture == null %}
                        <i class="fas fa-portrait"></i> <em>no picture</em>
                    {% else %}
                        <img src="{{ asset('uploads/pictures/' ~ member.picture) }}" class="items-align-right avatar avatar-medium" alt=" Avatar de {{ member.firstname}}">
                    {% endif %}</td>
                    <td> {% if member.gender == 'male' %}<i class="fas fa-male"></i>{% else %}<i class="fas fa-female"></i>{% endif %}</td>
                    <td>{{ member.city }}</td>
                    <td>{{ member.instrument.title }}</td>
                    <td>{{ member.wish }}</td>
                    <td> <a href="{{ path ('user_valid', {'slug' : member.slug, 'wish' : member.wish})}}" class="btn btn-primary"><i class="fas fa-check"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>