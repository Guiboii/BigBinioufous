{% extends 'desk/base.html.twig' %}

{% block title %}Validation{% endblock %}

{% block body %}

<div class="container mt-2">
    <div class="container mt-2">
        <table class="table table-hover">
            <h3>Demandes de validation en attente</h3>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Gender</th>
                    <th>City</th>
                    <th>Instrument</th>
                    <th>Wished role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in unvalids %}
                <tr>
                    <td>{{ user.fullName }}</td>
                    <td>{% if user.picture == null %}
                        <i class="fas fa-portrait"></i> <em>no picture</em>
                    {% else %}
                        <img src="{{ asset('uploads/pictures/' ~ user.picture) }}" class="items-align-right avatar avatar-medium" alt=" Avatar de {{ user.firstname}}">
                    {% endif %}</td>
                    <td> {% if user.gender == 'male' %}<i class="fas fa-male"></i>{% else %}<i class="fas fa-female"></i>{% endif %}</td>
                    <td>{{ user.city }}</td>
                    <td>{{ user.instrument.title }}</td>
                    <td>{{ user.wish }}</td>
                    <td> <a href="{{ path ('user_valid', {'slug' : user.slug, 'wish' : user.wish})}}" class="btn btn-primary"><i class="fas fa-check"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
