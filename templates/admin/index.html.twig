{% extends 'desk/base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

<div class="container mt-2">
    <div class="container mt-2">
        <table class="table table-hover">
            <h3>Demandes de validation en attente</h3>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Gender</th>
                    <th>City</th>
                    <th>Instrument</th>
                    <th>Wished role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in unvalids %}
                <tr>
                    <td>{{ user.fullName }}</td>
                    <td><img src="{{ asset('uploads/pictures/' ~ user.picture) }}" class="items-align-right avatar avatar-medium" alt="Avatar de {{ user.fullName}}"> </td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.city }}</td>
                    <td>instrument</td>
                    <td>{{ user.wish }}</td>
                    <td> <a href="{{ path ('user_valid', {'slug' : user.slug, 'wish' : user.wish})}}" class="btn btn-primary"><i class="fas fa-check"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="container mt-2">
        <table class="table table-hover">
            <h3>Les Binioufous</h3>
